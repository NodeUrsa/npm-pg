{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noEmitOnError": true,
        "pretty": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "experimentalDecorators": false,
        "strictNullChecks": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "declaration": true,
        "sourceRoot": "lib",
        "outDir": "dist"
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}